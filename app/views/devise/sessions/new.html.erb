<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<div class="container register-form">
    <div class="form">
        <div class="note">
            <h1>Log In</h1>
        </div>
        <div class="form-content">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <%= f.email_field :email,class: "form-control", placeholder: "Email *", autofocus: true, autocomplete: "email" %>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                       <%= f.password_field :password, class: "form-control", placeholder: "Your Password *", autocomplete: "current-password" %>
                    </div>
                </div>
            </div>
            <div>
              <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end %>
            </div>
            <div class="actions">
                <%= f.submit "Log in", class: "btnSubmit" %>
            </div>
            </br>
            Don't have account?<%= link_to "Sign up", new_registration_path(resource_name) %><br />
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>
    </div>
</div>

<% end %>


